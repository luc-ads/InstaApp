<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Base.Theme.InstaApp.RemoveSplashScreen" parent="Base.Theme.InstaApp">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Base.Theme.InstaApp.FormContainer">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="Base.Theme.InstaApp.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="Base.Theme.InstaApp.ButtonEnabled" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">@color/button_color_dynamic</item>
    </style>

    <style name="Base.Theme.InstaApp.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Base.Theme.InstaApp.TextView" >
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.Theme.InstaApp.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Base.Theme.InstaApp.SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Base.Theme.InstaApp.TextViewProfile">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Base.Theme.InstaApp.Button.White" parent="Widget.MaterialComponents.Button" >
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Base.Theme.InstaApp.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>